<!-- views/search.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results</title>
</head>
<body>
    <h1>Search Results</h1>
    <% if (results && results.length > 0) { %>
        <ul>
            <% results.forEach(result => { %>
                <li><%= result.foodInfo %></li>
            <% }); %>
        </ul>
    <% } else { %>
        <p>No results found.</p>
    <% } %>
</body>
</html>
